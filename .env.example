# Get your API key from https://www.themoviedb.org/settings/api
REACT_APP_TMDB_API_KEY=your_api_key_here

# Backend API URL (AuthStack)
REACT_APP_BACKEND_URL=your_backend_url_here

# Skip ESLint version check (required for ESLint 8 compatibility)
SKIP_PREFLIGHT_CHECK=true

# Disable ESLint during build (avoids plugin compatibility issues)
DISABLE_ESLINT_PLUGIN=true

# Disable the React error overlay (optional)
FAST_REFRESH=false

# Disable source maps in production
GENERATE_SOURCEMAP=false

# Inline runtime chunk for better caching
INLINE_RUNTIME_CHUNK=false